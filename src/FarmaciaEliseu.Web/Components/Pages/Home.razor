@page "/"

<PageTitle>Início - Farmácia Eliseu</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">💊 Farmácia Eliseu</h1>
        <p class="lead text-muted">Selecione um módulo para começar</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="p-3 border rounded bg-light h-100">
                <h3 class="mb-4 text-primary">
                    <i class="bi bi-building-gear"></i> Gestão
                </h3>
                
                <div class="d-grid gap-3">
                    <a href="produtos" class="btn btn-outline-primary btn-lg p-4 text-start shadow-sm d-flex align-items-center">
